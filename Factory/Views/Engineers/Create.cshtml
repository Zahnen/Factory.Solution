@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add a new engineer to Accelerate's database</h1>
<hr>
@using (Html.BeginForm())
{
  @Html.Label("Name")
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Degree/Certification")
  @Html.TextBoxFor(model => model.Degree)

  <input type="submit" value="Add Engineer" class="btn btn-default" />
}
