@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>

<h1>Registered Engineers</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No engineers have been added to Accelerate's database.</h3>
}
@foreach (Engineer engineer in Model)
{
  <div class="engineerInfo">
    <p><b>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId})</b></p>
    <p>@engineer.Degree</p>
  </div>
}
<a href='@Url.Action("Create")'>
    <img class="button-display" src='@Url.Content("~/img/AddEngineer.png")' />
</a>