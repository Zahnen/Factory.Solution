@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Directory</h1>
<hr>
<div class="row">
  <div class="col-sm-6">
    <h1>Engineers</h1>
    @if (@ViewBag.Engineers.Count == 0)
    {
      <h3>No engineers have been added to Accelerate's database.</h3>
    }
    @foreach (Engineer engineer in ViewBag.Engineers)
    {
      <div class="engineerInfo">
        <p>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId } )</p>
        <p>@engineer.Degree</p>
      </div>
    }
    <a href='@Url.Action("Create", "Engineers")'>
      <img class="button-display" src='@Url.Content("~/img/AddEngineer.png")' />
    </a>
  </div>
  <div class="col-sm-6">
    <h1>Machines</h1>
    @if (@ViewBag.Machines.Count == 0)
    {
      <h3>No engineers have been added to Accelerate's database.</h3>
    }
    @foreach (Machine machine in ViewBag.Machines)
    {
      <div class="machineInfo">
        <p>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId } )</p>
        <p>@machine.Type</p>
      </div>
    }
    <a href='@Url.Action("Create", "Machines")'>
      <img class="button-display" src='@Url.Content("~/img/AddMachine.png")' />
    </a>
  </div>
</div>
