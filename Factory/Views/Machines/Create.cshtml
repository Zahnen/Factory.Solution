@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add a new machine to Accelerate's database</h1>
<hr>
@using (Html.BeginForm())
{
  @Html.Label("Name")
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Machine Type")
  @Html.TextBoxFor(model => model.Type)

  @Html.Label("Known Issues")
  @Html.TextBoxFor(model => model.Issues)

  <input type="submit" value="Add Machine" class="btn btn-default" />
}
