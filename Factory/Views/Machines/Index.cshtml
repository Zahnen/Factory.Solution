@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>
<h1>Registered Machines</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No machines have been added to Accelerate's database.</h3>
}
@foreach (Machine machine in Model)
{
  <div class="machineInfo">
    <p><b>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId})</b></p>
    <p>@machine.Type</p>
  </div>
}

@Html.ActionLink("Register a new Engineer", "Create")